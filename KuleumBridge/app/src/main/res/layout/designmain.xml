<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">

    <Button
        android:id="@+id/notification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/notification"
        android:gravity="center"
        android:onClick="onCalenderBtnClick"
        tools:layout_editor_absoluteX="365dp"
        tools:layout_editor_absoluteY="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        tools:layout_editor_absoluteY="60dp">

        <TextView
            android:id="@+id/hi_"
            android:layout_width="150dp"
            android:layout_height="26.23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/EliceDigitalBaeumOTF_Bold"
            android:gravity="top"
            android:text="안녕, 김호준!"
            android:textColor="#000000"
            android:textSize="22.74sp" />

        <TextView
            android:id="@+id/you_have_4_"
            android:layout_width="225.61dp"
            android:layout_height="16.61dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/EliceDigitalBaeumOTF_Bold"
            android:gravity="top"
            android:letterSpacing="0.03"
            android:text="너의 학교 생활을 이어줄게:)"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/profile_image"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/hojoon"
            android:background="@drawable/round"

            android:scaleType="centerCrop"
   />
    </RelativeLayout>


    <TextView
        android:id="@+id/calendarview"
        android:layout_width="348dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:background="@drawable/calendar_view"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:fontFamily="@font/EliceDigitalBaeumOTF_Bold"
        android:gravity="center"
        android:text="아무것도 없음"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:topLeftRadius="12dp"
        android:topRightRadius="50dp"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="120dp" />

    <Button
        android:id="@+id/zoomcalendar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/plus"
        android:gravity="center"
        android:onClick="onCalenderBtnClick"
        android:textColor="@color/black"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="340dp"
        tools:layout_editor_absoluteY="315dp" />


    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="250dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="354dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line" />



        <RelativeLayout
            android:id="@+id/frame_34254"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:background="@drawable/frame_34254"
            android:layout_marginLeft="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="105dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/EliceDigitalBaeumOTF_Bold"
                android:gravity="center"
                android:text="공지사항"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_34255"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:background="@drawable/frame_34255"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/EliceDigitalBaeumOTF_Bold"
                android:gravity="center"
                android:text="맛집"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_34256"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/frame_34256"
>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/EliceDigitalBaeumOTF_Bold"
                android:gravity="center"
                android:text="관련 링크"
                android:textColor="@color/white"
                android:textSize="30sp" />




        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_34259"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/frame_34259"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="105dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/EliceDigitalBaeumOTF_Bold"
                android:gravity="center"
                android:text="성적 조회"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/simplemenu"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/EliceDigitalBaeumOTF_Bold"
            android:gravity="top"
            android:text="간편메뉴"
            android:textColor="#000000"
            android:textSize="30dp"

            />


    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:background="@drawable/round"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="625dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/selector1"
            android:text="홈"
            app:tabBackground="#00FFFFFF"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/selector2"
            android:text="메뉴"
            app:tabBackground="#00FFFFFF"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/selector3"
            android:text="설정"
            app:tabBackground="#00FFFFFF"/>


    </com.google.android.material.tabs.TabLayout>


</androidx.constraintlayout.widget.ConstraintLayout>