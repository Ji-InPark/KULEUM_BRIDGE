<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1">


    <Button
        android:id="@+id/notification"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="64dp"
        android:background="@drawable/notification"
        android:gravity="center"
        android:onClick="onCalenderBtnClick"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginBottom="250dp"
        app:layout_constraintBottom_toTopOf="@+id/zoomcalendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/notification">

        <TextView
            android:id="@+id/hi_"
            android:layout_width="150dp"
            android:layout_height="26.23dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/elice_digital_baeum_otf_bold"
            android:gravity="top"
            android:text="안녕, 김호준!"
            android:textColor="#000000"
            android:textSize="22.74sp" />

        <TextView
            android:id="@+id/you_have_4_"
            android:layout_width="225.61dp"
            android:layout_height="19dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/elice_digital_baeum_otf_bold"
            android:gravity="top"
            android:letterSpacing="0.03"
            android:text="너의 학교 생활을 이어줄게:)"
            android:textSize="15sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/calendarview"
        android:layout_width="360dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/calendar_view"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:fontFamily="@font/elice_digital_baeum_otf_bold"
        android:gravity="center"
        android:text="아무것도 없음"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:topLeftRadius="12dp"
        android:topRightRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.0"/>


    <Button
        android:id="@+id/zoomcalendar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/plus"
        android:onClick="onCalenderBtnClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/tab_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simplemenu">


        <RelativeLayout
            android:id="@+id/frame_34254"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="105dp"
            android:background="@drawable/frame_34254">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/elice_digital_baeum_otf_bold"
                android:gravity="center"
                android:text="공지사항"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_34255"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/frame_34255">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/elice_digital_baeum_otf_bold"
                android:gravity="center"
                android:text="맛집"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_34256"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/frame_34256">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/elice_digital_baeum_otf_bold"
                android:gravity="center"
                android:text="관련 링크"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/frame_34259"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="105dp"
            android:background="@drawable/frame_34259">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/elice_digital_baeum_otf_bold"
                android:gravity="center"
                android:text="성적 조회"
                android:textColor="@color/white"
                android:textSize="30sp" />


        </RelativeLayout>


    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="380dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/selector1"
            android:text="홈"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/selector2"
            android:text="메뉴" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/selector3"
            android:text="설정" />


    </com.google.android.material.tabs.TabLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/line"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="326dp"
        android:id="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/simplemenu"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:fontFamily="@font/elice_digital_baeum_otf_bold"
        android:gravity="top"
        android:text="간편메뉴"
        android:textColor="#000000"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="365dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/hojoon"
        app:civ_border_color="@color/design_default_color_primary_dark"
        app:civ_border_width="1dp"
        app:civ_fill_color="#23f22f"
        tools:layout_editor_absoluteX="355dp"
        tools:layout_editor_absoluteY="16dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>