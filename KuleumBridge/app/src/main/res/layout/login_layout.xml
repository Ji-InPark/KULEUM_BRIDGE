<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_img"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/kuleum_icon" />

    <TextView
        android:id="@+id/Konkuk"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:fontFamily="@font/elice_digital_baeum_otf_bold"
        android:gravity="center"
        android:text="학교생활의 연결,  \nKU:LEUM BRIDGE" />


    <TableRow
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_border_except_right"/>

        <EditText
            android:id="@+id/idInput"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_border_except_left"
            android:hint="  PORTAL ID"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:textColorHint="#808080"
            android:windowSoftInputMode="adjustPan" />
    </TableRow>

    <TableRow
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_border_except_right"/>

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext_border_except_left"
            android:textColor="#ff000000"
            android:textColorHint="#808080"
            android:hint="  Password"
            android:maxLines="1"
            android:inputType="textPassword"
            android:imeOptions="actionGo"
            android:windowSoftInputMode="adjustPan" />
    </TableRow>


    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/loginButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:backgroundTint="@color/black"
        android:onClick="onLoginBtnClick"/>




</LinearLayout>